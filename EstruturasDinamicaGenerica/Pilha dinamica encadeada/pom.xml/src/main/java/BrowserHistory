
public class BrowserHistory {

    private LinkedStack<String> history; // pilha para armazenar URLs

    public BrowserHistory(int maxHistory) {
        history = new LinkedStack<>(maxHistory);
    }

    // Visita uma nova p치gina (empilha a URL)
    public void visit(String url) {
        history.push(url);
        System.out.println("游댕 Visitando: " + url);
    }

    // Volta para a p치gina anterior (desempilha)
    public void back() {
        if (history.isEmpty()) {
            System.out.println("丘멆잺 Nenhuma p치gina anterior.");
            return;
        }

        String lastPage = history.pop();
        System.out.println("拘勇 Voltando de: " + lastPage);

        if (!history.isEmpty()) {
            System.out.println("游늯 P치gina atual: " + history.peek());
        } else {
            System.out.println("游 Nenhuma p치gina no hist칩rico.");
        }
    }

    // Mostra o hist칩rico completo
    public void showHistory() {
        System.out.println("游뎾 Hist칩rico: " + history.print());
    }

    // Mostra a p치gina atual
    public void showCurrentPage() {
        if (history.isEmpty()) {
            System.out.println("游 Nenhuma p치gina aberta.");
        } else {
            System.out.println("游늯 P치gina atual: " + history.peek());
        }
    }
}
